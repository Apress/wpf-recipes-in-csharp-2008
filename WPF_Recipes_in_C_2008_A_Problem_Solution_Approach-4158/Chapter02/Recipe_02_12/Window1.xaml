<Window x:Class="Recipe_02_12.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WPF Recipes 2_12" Height="170" Width="300">
    <StackPanel>
        <Button Click="btnMessageOnly_Click" Content="Message Only" 
                Margin="5" Name="btnMessageOnly" />
        <Button Click="btnMessageHeader_Click" Content="Message and Header" 
                Margin="5" Name="btnMessageHeader" />
        <Button Click="btnMessageHeaderButton_Click" 
                Content="Message, Header, and Button" 
                Margin="5" Name="btnMessageHeaderButton" />
        <Button Click="btnMessageHeaderButtonImage_Click" 
                Content="Message, Header, Button, and Image" 
                Margin="5" Name="btnMessageHeaderButtonImage" />
    </StackPanel>
</Window>
