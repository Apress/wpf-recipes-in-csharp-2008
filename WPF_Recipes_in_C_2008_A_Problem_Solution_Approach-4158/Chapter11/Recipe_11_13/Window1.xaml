<Window 
  x:Class="Recipe_11_13.Window1"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Recipe_11_13" 
  Height="300" 
  Width="300">
  <Window.Resources>
    <PathGeometry
      x:Key="AnimationPathGeometry"
      Figures="M 50,150 C 100,-200 500,400 450,100 400,-100 285,400 50,150" />

    <Storyboard
      x:Key="MatrixAnimationStoryboard">
      <MatrixAnimationUsingPath
        RepeatBehavior="Forever"
        Duration="0:0:5"
        AutoReverse="True"
        Storyboard.TargetName="BorderMatrixTransform"
        Storyboard.TargetProperty="Matrix"
        DoesRotateWithTangent="True"
        PathGeometry="{StaticResource AnimationPathGeometry}" />
    </Storyboard>
  </Window.Resources>
  <Viewbox>
    <MediaElement
      x:Name="mePlayer"
      Stretch="Fill">
      <MediaElement.Triggers>
        <EventTrigger
          RoutedEvent="MediaElement.Loaded">
          <BeginStoryboard>
            <Storyboard>
              <MediaTimeline
                Storyboard.TargetName="mePlayer"
                Source="clock.avi" 
                RepeatBehavior="Forever" />
            </Storyboard>
          </BeginStoryboard>
        </EventTrigger>
      </MediaElement.Triggers>
    </MediaElement>
  </Viewbox>
</Window>
