<Window x:Class="Recipe_09_01.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WPF Recipes 9_01" Height="250" Width="500">
    <StackPanel Orientation="Horizontal">
        <StackPanel Margin="5">
            <TextBlock FontSize="14" Text="Lines in a StackPanel:"/>
            <Line X1="10" Y1="10" X2="230" Y2="40" 
                  Stroke="Black" StrokeThickness="5"/>
            <Line X1="10" Y1="80" X2="230" Y2="20" 
                  Stroke="Black" StrokeThickness="8"/>
            <Line X1="2.5cm" Y1="-1.25cm" X2="3.5cm" Y2="1.5cm" 
                  Stroke="Black" StrokeThickness=".1cm"/>
        </StackPanel>
        <Canvas Margin="5">
            <TextBlock FontSize="14" Text="Lines in a Canvas:"/>
            <Line Canvas.Top="100" Canvas.Left="20"  X2="200" Y2="40" 
                  Stroke="Black" StrokeThickness="5"/>
            <Line X1="50" Y1="200" X2="230" Y2="20" 
                  Stroke="Black" StrokeThickness="8"/>
            <Line Canvas.Bottom="30" Canvas.Left="180" 
                  X1="0" Y1="30" X2="-10" Y2="-130" 
                  Stroke="Black" StrokeThickness="5"/>            
        </Canvas>
    </StackPanel>
</Window>
